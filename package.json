{
  "name": "hackaton-data-privacy",
  "version": "1.0.0",
  "description": "Portal keamanan data dan privasi warga dengan backend offline berbasis Node.js & SQLite.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon --watch schema.sql --watch server.js --watch db.js server.js",
    "db:prepare": "node db.js --init",
    "seed:users": "node seed-users.js"
  },
  "keywords": [
    "keamanan",
    "privasi",
    "offline",
    "sqlite",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "argon2": "^0.40.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  }
}
